@model List<Clinic.Models.ViewModels.DisplayScheduleRequest>

@*

*@
@{
}

<div>
    <div class="container py-5">
        <h1>  Display schedule </h1>
    </div>
</div>

<div class="container" py-5>
    @if (Model != null && Model.Any())
    {
        <div>
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Surname</th>
                        <th>Day</th>
                        <th>Start hour</th>
                        <th>Finish hour</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var rec in Model)
                    {
                        <tr>
                            <td>@rec.Name</td>
                            <td>@rec.Surname</td>
                            <td>@rec.Day.ToString("yyyy-MM-dd")</td>
                            <td>@rec.StartTime.TimeOfDay</td>
                            <td>@rec.EndTime.TimeOfDay</td>

                            <td>
                                <div class="d-flex">
                                    <a asp-area=""
                                       asp-controller="Schedule"
                                       asp-action="Delete"
                                       asp-route-id="@rec.ShiftId"
                                       class=" btn btn-dark btn-danger">
                                        Delete
                                    </a>
                                </div>

                            </td>

                        </tr>
                    }
                </tbody>

            </table>
        </div>

        <div class="d-flex">
            <a asp-area=""
               asp-controller="Schedule"
               asp-action="Add"
               class=" btn btn-dark btn-sm">
                Add record
            </a>
        </div>
    }
    else
    {
        <p>No records in schedule for this week</p>
        <div class="d-flex">
            <a asp-area=""
               asp-controller="Schedule"
               asp-action="Add"
               class=" btn btn-dark btn-sm">
                Add record
            </a>
            </div>
    }
</div>