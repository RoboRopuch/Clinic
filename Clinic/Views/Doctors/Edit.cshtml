@model Clinic.Models.Domain_Entities.Doctor

@{
}
<div class="container">
    <div class="container py-5">
        <h1>  Edit Tag - Admin Functionality  </h1>
    </div>

    <div class="container">

        @if (Model != null)
        {
            <form method="post">

                <dvi class="mb-3">
                    <label for="readonlyField" class="form-label">Id</label>
                    <input type="text" class="form-control" id="displayname" asp-for="Id" readonly />
                </dvi>

                <dvi class="mb-3">
                    <label class="form-label">Name</label>
                    <input type="text" class="form-control" id="displayname" asp-for="Name" />
                </dvi>

                <dvi class="mb-3">
                    <label class="form-label">Surname</label>
                    <input type="text" class="form-control" id="displayname" asp-for="Surname" />
                </dvi>
                <div class ="mb-3">
                    <select class="form-select" aria-label="Default select example" asp-for="Specialisation">
                        <option selected>Specialisation</option>
                        <option>domowy</option>
                        <option>laryngolog</option>
                        <option>okulista</option>
                        <option>neurolog</option>
                        <option>ortopeda</option>
                        <option>pediatra</option>
                    </select>
                </div>

                <div class="mt-3">
                    <div class="d-flex">
                        <button type="submit" class="btn btn-dark">Update</button>
                        <button type="submit" class="btn btn-danger ms-2"
                                asp-area=""
                                asp-controller="Doctors"
                                asp-action="Delete">
                            Delete
                        </button>
                    </div>
                </div>
            </form>
        }
        else
        {
            <p>Something went wrong, could not find the tag</p>
        }

    </div>



</div>


