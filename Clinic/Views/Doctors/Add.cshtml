<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>  Add Doctor - Admin Functionality  </h1>
    </div>
    <div class="container py-5">
        <form method="post">
            <div class="mb-3">
                <label class="form-label">Name</label>
                <input type="text" class="form-control" id="name" asp-for="Name" />
            </div>
            <div class="mb-3">
                <label class="form-label">Surname</label>
                <input type="text" class="form-control" id="displayname" asp-for="Surname" />
            </div>
            <div class="mb-3">
                <label class="form-label">Email</label>
                <input type="text" class="form-control" id="displayname" asp-for="Email" />
            </div>
            <div class="mb-3">
                <label class="form-label">Username</label>
                <input type="text" class="form-control" id="displayname" asp-for="Username" />
            </div>
            <div class="mb-3">
                <label class="form-label">Password</label>
                <input type="text" class="form-control" id="displayname" asp-for="Password" />
            </div>
            <div class="mb-3">

                <select class="form-select" aria-label="Default select example" asp-for="Specialisation">
                    <option selected>Specialisation</option>
                    <option>domowy</option>
                    <option>laryngolog</option>
                    <option>okulista</option>
                    <option>neurolog</option>
                    <option>ortopeda</option>
                    <option>pediatra</option>
                </select>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-dark">Submit</button>
            </div>
        </form>
    </div>
</div>