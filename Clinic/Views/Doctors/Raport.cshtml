@model Clinic.Models.ViewModels.RaportRequest


<div class="container">
    <div class="container py-5">
        <h1>Generate raport</h1>
        <em>Choose days for generating raport, start and final days are taken into consideration</em>
    </div>
    <div>
        <form method="post">
        <div class="mb-3">
            <label class="form-label">Start day</label>
            <input type="date" placeholder ="..." class="form-control" id="displayname" asp-for="StartDay"/>

        </div>

        <div class="mb-3">
            <label class="form-label">Final day</label>
                <input type="date" placeholder="..." class="form-control" id="displayname" asp-for="EndDay" />
        </div>

        <div class="mt-3">
            <div class="d-flex">
                <button type="submit" class="btn btn-dark">Generate</button>
            </div>
        </div>
        </form>
    </div>

</div>