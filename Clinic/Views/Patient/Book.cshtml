@model Clinic.Models.Domain_Entities.Visits

@{
    ViewData["Title"] = "Visit Details";
}

<div class="container py-5">
    <h1>Visit Details</h1>
</div>


<div class="container">

    <div class="alert-danger">
        @if (ViewData.ModelState.IsValid == false)
        {
            <div>
                @Html.ValidationSummary(false)
            </div>

        }
    </div>



    <div>
        <dl class="row">
            <dt class="col-sm-2">Day:</dt>
            <dd class="col-sm-10">@Model.Day.ToString("yyyy-MM-dd")</dd>

            <dt class="col-sm-2">Start Time:</dt>
            <dd class="col-sm-10">@Model.StartTime.ToString("HH:mm:ss")</dd>

            <dt class="col-sm-2">End Time:</dt>
            <dd class="col-sm-10">@Model.EndTime.ToString("HH:mm:ss")</dd>

            <dt class="col-sm-2">Finished:</dt>
            <dd class="col-sm-10">@Model.IsFinished</dd>

            <dt class="col-sm-2">Doctor:</dt>
            <dd class="col-sm-10">Dr @(Model.Doctor?.Surname ?? "Not Assigned")</dd>

            <dt class="col-sm-2">Specialisation:</dt>
            <dd class="col-sm-10">@(Model.Doctor?.Specialisation ?? "N/A")</dd>

        </dl>


        <div class="d-flex">
            <form asp-action="Book">
                @if (ViewBag.Error == null)
                {
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="RowVersion" />
                    <div class="form-group">
                        <input type="submit" value="book" class="btn btn-success" />
                    </div>
                }
                else
                {
                    <div>
                        <a asp-area=""
                           asp-controller="Patient"
                           asp-action="pickSpec"
                           class="btn btn-dark btn-sm">
                            go back
                        </a>
                    </div>

                }
            </form>

        </div>
    </div>
</div>
