@{
    Layout = "_Layout";
}

<style>
    /* Add your custom styles here */
    body {
        padding-top: 0px;
    }

    .hero-section {
        background-image: url('your-image-url.jpg');
        background-size: cover;
        background-position: center;
        color: white;
        text-align: center;
        padding: 100px 0;
    }

    .services-section {
        background-color: #f8f9fa;
        padding: 80px 0;
    }

    .about-section,
    .team-section,
    .testimonials-section,
    .cta-section {
        padding: 80px 0;
    }

    .cta-section {
        background-color: #007bff;
        color: white;
    }

        .cta-section h2 {
            color: white;
        }
</style>

<!-- Hero Section -->
<header id="home" class="hero-section">
    <div class="container">
        <h1 class="display-4 text-dark">Your Health, Our Priority</h1>
        <p class="lead  text-dark">Providing quality healthcare services for a healthier community.</p>
    </div>


<div class="container">
    <div class="text-center">
        <div id="carouselExampleIndicators" class="carousel slide">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
            </div>
            <div class="carousel-inner">
                <div class="carousel-item active">
                        <img src='https://source.unsplash.com/random/1200x500?clinic&sig=1' class="d-block mx-auto h-100" alt="...">
                </div>
                <div class="carousel-item">
                        <img src='https://source.unsplash.com/random/1200x500?clinic&sig=2' class="d-block mx-auto h-100" alt="...">
                </div>
                <div class="carousel-item">
                        <img src='https://source.unsplash.com/random/1200x500?clinic&sig=3' class="d-block mx-auto h-100" alt="...">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
</div>



</header>

<!-- Services Section -->
<section id="services" class="services-section">
    <div class="container">
        <h2 class="text-center mb-4">Our Services</h2>
        <div class="row">
            <div class="col-md-4">
                <h4>Medical Check-ups</h4>
                <p>Comprehensive medical examinations to assess and monitor your health.</p>
            </div>
            <div class="col-md-4">
                <h4>Specialized Care</h4>
                <p>Specialized healthcare services tailored to meet individual needs.</p>
            </div>
            <div class="col-md-4">
                <h4>Wellness Programs</h4>
                <p>Promoting a healthy lifestyle through personalized wellness programs.</p>
            </div>
        </div>
    </div>
</section>

<!-- Improved About Us Section -->
<section id="about" class="about-section bg-light py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <h2 class="mb-4">Who We Are</h2>
                <p>
                    At our clinic, we are more than just healthcare providers. We are a team of dedicated professionals committed to ensuring the well-being of our community.
                </p>
                <p>
                    Our mission is to provide compassionate and personalized healthcare services, focusing on the individual needs of each patient. With a team of experienced and caring professionals, we strive to create a positive and healing environment.
                </p>
            </div>
            <div class="col-lg-6 text-center">
                <img src='https://source.unsplash.com/random/500x500?clinic&sig=4' alt="Clinic Image" class="img-fluid rounded-circle">
            </div>
        </div>
    </div>
</section>


<!-- Team Section -->
<section id="team" class="team-section">
    <div class="container">
        <h2 class="text-center mb-4">Meet Our Team</h2>
        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <img src="https://source.unsplash.com/random/400x400?medic&sig=1" class="card-img-top" alt="Team Member 1">
                    <div class="card-body">
                        <h5 class="card-title">Dr. John Smith</h5>
                        <p class="card-text">Cardiologist</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <img src="https://source.unsplash.com/random/400x400?medic&sig=2" class="card-img-top" alt="Team Member 2">
                    <div class="card-body">
                        <h5 class="card-title">Dr. Emily Johnson</h5>
                        <p class="card-text">Pediatrician</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <img src="https://source.unsplash.com/random/400x400?medic&sig=3" class="card-img-top" alt="Team Member 3">
                    <div class="card-body">
                        <h5 class="card-title">Dr. Michael Brown</h5>
                        <p class="card-text">Dermatologist</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section id="cta" class="cta-section text-center">
    <div class="container">
        <h2 class="mb-4">Ready to prioritize your health?</h2>
        <p class="lead">Schedule an appointment today and experience top-notch healthcare.</p>
        <a href="#contact" class="btn btn-light btn-lg">Contact Us</a>
    </div>
</section>

<!-- Contact Section -->
<section id="contact" class=" mt-5">
    <div class="container">
        <h2 class="text-center mb-4">Contact Us</h2>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form>
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" class="form-control" id="name" placeholder="Your Name" required>
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" id="email" placeholder="Your Email" required>
                    </div>
                    <div class="form-group">
                        <label for="message">Message</label>
                        <textarea class="form-control" id="message" rows="4" placeholder="Your Message" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Send Message</button>
                </form>
            </div>
        </div>
    </div>
</section>

